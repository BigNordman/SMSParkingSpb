<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_3"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Обзор"
        android:id="@+id/resumeLabel"
        android:textAlignment="center"
        android:layout_marginTop="60dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="53dp"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/icon_car" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/regNumText"
            android:textSize="35dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/colorMaterialGrey"
            android:focusable="false"
            android:layout_weight="0.39"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="53dp"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@drawable/icon_parking" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/parkNumText"
            android:textSize="35dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/colorMaterialGrey"
            android:focusable="false"
            android:layout_weight="0.39"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="53dp"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:src="@drawable/icon_clock" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/hourText"
            android:textSize="35dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/colorMaterialGrey"
            android:focusable="false"
            android:text=""
            android:layout_weight="0.39" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Оплатить через СМС"
        android:id="@+id/buttonPay"
        android:background="@drawable/button_customize"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="53dp"
        android:gravity="center_horizontal|center_vertical">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:visibility="visible"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/statusMessage"
            android:textColor="@android:color/black"
            android:text="статус" />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="qClick"
        android:visibility="invisible" />


</LinearLayout>
