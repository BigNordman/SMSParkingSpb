<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ваш автомобиль"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_marginTop="80dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="53dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView1"
            android:src="@drawable/icon_car" />

        <TextView
            android:layout_width="201dp"
            android:layout_height="60dp"
            android:id="@+id/regNumText"
            android:textSize="35dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/colorMaterialGrey"
            android:focusable="false" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/button0"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/button1"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/button2"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/button3"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:text="@string/backspace"
                android:id="@+id/buttonBack"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/button4"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/button5"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/button6"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/button7"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/button8"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/button9"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="A"
                android:id="@+id/buttonA"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="B"
                android:id="@+id/buttonB"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="E"
                android:id="@+id/buttonE"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="K"
                android:id="@+id/buttonK"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="M"
                android:id="@+id/buttonM"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>


            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="H"
                android:id="@+id/buttonH"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="O"
                android:id="@+id/buttonO"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="P"
                android:id="@+id/buttonP"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/buttonC"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="T"
                android:id="@+id/buttonT"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="У"
                android:id="@+id/buttonY"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="X"
                android:id="@+id/buttonX"
                android:background="@drawable/button_customize"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="5dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
